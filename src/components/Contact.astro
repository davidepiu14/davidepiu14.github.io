<section class="mb-8 brut-card">
  <div class="mb-4">
    <h2 class="font-bold text-text-heading text-2xl md:text-3xl">
      Contact
    </h2>
    <p class="text-sm text-text-muted mt-1">
      Send me an email using the form below.
    </p>
  </div>
  <form
    action="https://formspree.io/f/mvgyykdo"
    method="POST"
    class="space-y-4"
  >
    <label class="block text-sm">
      <span class="font-semibold">Your email</span>
      <input
        type="email"
        name="email"
        required
        class="mt-1 w-full border border-border-code bg-bg-body px-3 py-2 text-sm"
      />
    </label>
    <label class="block text-sm">
      <span class="font-semibold">Message</span>
      <textarea
        name="message"
        required
        rows="4"
        class="mt-1 w-full border border-border-code bg-bg-body px-3 py-2 text-sm"
      ></textarea>
    </label>
    <button
      type="submit"
      class="brut-pill brut-pill--accent mt-1"
    >
      Send
    </button>
  </form>
</section>


