---
/*
  This is not a layout but just a component that's used in layouts.
*/
---

<script is:inline>
  // Set dark mode as default, but respect user choice stored in sessionStorage
  (function () {
    if (typeof window !== "undefined") {
      const storageTheme = sessionStorage.getItem("theme");
      const themeMeta = document.head.children.namedItem("theme-color");

      if (storageTheme === "light") {
        document.documentElement.classList.remove("dark");
        if (themeMeta) {
          themeMeta.content = "#ffffff";
        }
      } else {
        // default: dark
        document.documentElement.classList.add("dark");
        if (themeMeta) {
          themeMeta.content = "#0f172a";
        }
      }
    }
  })();
</script>
