---
import { readAll } from "../lib/markdoc/read";
import { blog } from "../lib/markdoc/frontmatter.schema";
import PageLayout from "../layouts/PageLayout.astro";
import PageMeta from "../components/PageMeta.astro";
import { SITE_TITLE } from "../config";

const posts = await readAll({
  directory: "blog",
  frontmatterSchema: blog,
});

const sortedPosts = posts
  .filter((p) => p.frontmatter.draft !== true)
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );
---

<PageLayout>
  <PageMeta title={`Blog | ${SITE_TITLE}`} slot="meta" />
  <section slot="main" class="mt-6 space-y-6">
    <ul class="unset space-y-6">
      {
        sortedPosts.map((post) => {
          const formattedDate = new Date(
            post.frontmatter.date
          ).toLocaleDateString("en-us", {
            year: "numeric",
            month: "short",
            day: "numeric",
          });
          const isExternal = post.frontmatter.external;
          const href = isExternal ? post.frontmatter.url : `/blog/${post.slug}`;
          return (
            <li>
              <a
                href={href}
                target={isExternal ? "_blank" : undefined}
                rel={isExternal ? "noreferrer" : undefined}
                class="unset block brut-card hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[6px_6px_0_rgba(15,23,42,1)] transition-transform duration-150"
              >
                <h2 class="text-xl md:text-2xl font-bold mb-2">
                  {post.frontmatter.title}
                  {isExternal && (
                    <span class="ml-2 text-xs uppercase tracking-wide align-middle">
                      <i class="fa-solid fa-up-right-from-square mr-1" />
                      External
                    </span>
                  )}
                </h2>
                {post.frontmatter.description && (
                  <p class="text-sm md:text-base text-text-muted mb-3">
                    {post.frontmatter.description}
                  </p>
                )}
                <div class="flex items-center justify-between text-xs md:text-sm text-text-muted">
                  <time datetime={post.frontmatter.date.toISOString()}>
                    {formattedDate}
                  </time>
                </div>
              </a>
            </li>
          );
        })
      }
    </ul>
  </section>
</PageLayout>
